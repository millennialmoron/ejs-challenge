<%- include("partials/header.ejs"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <label for="titleText" class="form-label">Title:</label>
  <input
    type="text"
    name="titleText"
    class="titleText form-control"
    placeholder="Type title here..."
  />
  <br />
  <label for="postText" class="form-label">Body:</label>
  <textarea
    class="form-control postText"
    name="postText"
    rows="4"
    placeholder="Type body here..."
  ></textarea>
  <br />
  <button class="btn btn-lg btn-dark" type="submit" name="Publish">
    Publish
  </button>
</form>

<%- include("partials/footer.ejs"); -%>
